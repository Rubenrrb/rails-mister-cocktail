<div class="cocktail-info-name">
  <h2><%= @cocktail.name %></h2>
</div>
<div class="container-cocktail-info">
  <div class="card-cocktail-info">
    <img src="<%= cl_image_path @cocktail.photo.key %>" alt="">
    <div>
      <% if @cocktail.doses.any? %>
        <% @cocktail.doses.each do |dose| %>
          <h2><span class="mr-3"><i class="fas fa-cocktail"></i></span ><%= dose.ingredient.name %> - <em><span style="font-size: 25px;"><%= dose.description %></em></span><span class="ml-3"><%= link_to dose_path(dose), method: :delete, data: { confirm: "delete it?" } do %>
                <i class="far fa-trash-alt"></i>
              <% end %></span></h2>
        <% end %>
      <% else %>
        <h2 style="font-size: 24px;"><em>No recipe yet, would you like to add one?</em></h2>
      <% end %>
    </div>
    <%= render 'form_add_dose' %>
  </div>
</div>
