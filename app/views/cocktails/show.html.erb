<div class="dose-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @cocktail.photo.key %>)">
    <div class="logo"><b>C<span>i</span>t<span>y</span>C<span>oc</span>k<span>ta</span><span>il</span>s</b></div>
</div>

  <div class="container-dose mt-3">
    <h2><%= @cocktail.name %></h1>
    <h3><% @cocktail.doses.each do |dose| %></h2>
    <h3><%= dose.description %></h2>
    <h3><%= dose.ingredient.name %></h2>

    <%= link_to "add doses", new_cocktail_dose_path(@cocktail) %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "delete it?" } do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
     <% end %>
  </div>
  

<div class="container-form-dose">
  <div class="container d-flex justify-content-center">
  <div class="card m-3" style="width: 18rem;">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, collection: Ingredient.where.not(id: @cocktail.ingredients).order(name: :asc) %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-success mb-3' %>
      <% end %>
     </div>
    </div>
  </div>
